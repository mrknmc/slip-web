script(type='text/template', id='upload-template')
  td <%- user.name %>
  td <%- user.email %>
  td <%- deviceId %>
  td <%- location %>
  td <%- created %>
  td
    .btn-group
      | <a class='btn btn-default create' href='<%= url %>' target='_blank'>
      |  <i class='fa fa-link fa-lg'></i>
      | </a>
      a.btn.btn-default.delete
        i.fa.fa-remove.fa-lg

script(type='text/template', id='user-template')
  a.delete.pull-right.btn
    i.fa.fa-remove.fa-2x
  h4.list-group-item-heading <%- name %>
  p.list-group-item-text <%- email %>

script(type='text/template', id='device-template')
  h3.list-group-item-heading <%- _id %>
  h4.list-group-item-heading.solar Solar Power
  dl.dl-horizontal
    dt Measured Since
    dd <%- minSolarDate %>
    dt Measured Until
    dd <%- maxSolarDate %>
    dt Total Energy Collected
    dd <%- solarSum %> W/m&sup2;
    dt Most optimal orientation
    dd <%- bestSolarOrientation %>
  h4.list-group-item-heading.wind Wind Power
  dl.dl-horizontal
    dt Measured Since
    dd <%- minWindDate %>
    dt Measured Until
    dd <%- maxWindDate %>
    dt Total Wind Speed
    dd <%- windSpeedSum %> m/s
    dt Most optimal orientation
    dd <%- bestWindOrientation %>
  //- h4.list-group-item-heading.wind Recorded Locations
