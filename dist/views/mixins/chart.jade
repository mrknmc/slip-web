mixin chart(chartId, title, color)
  div(class='#{color}').ui.top.attached.large.menu
    //- .ui.title.item #{title}
    .ui.item.dropdown
      .text Last Week
      i.dropdown.icon
      .menu
        .item(data-value='lastWeek') Last Week
        .item(data-value='lastMonth') Last Month
  .ui.attached.segment
    div(id='#{chartId}').ct-chart.ct-major-eleventh
