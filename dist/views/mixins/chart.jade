mixin chart(id, title, color)
  div(id='#{id}')
    div(class='#{color}').ui.top.attached.large.menu
      .ui.title.item
      .ui.item.dropdown
        .text Last Week
        i.dropdown.icon
        .menu
          .item(data-value='lastWeek') Last Week
          .item(data-value='lastMonth') Last Month
    .ui.attached.segment
      div(id='#{id}-chart').ct-chart.ct-major-eleventh
