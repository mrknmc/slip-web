doctype html
html
  head
    include ./head.jade
body
  include ./menu.jade

  .main.container.tab-content
    #uploads.tab-pane.active.container-fluid
      .page-header
        h1
          i.fa.fa-arrow-circle-o-up.fa-fw.fa-lg
          | Uploads
      include ./uploads.jade
    #solar.tab-pane.container-fluid
      .page-header
        h1
          i.fa.fa-sun-o.fa-fw.fa-lg
          | Solar Power
      .charts
    #wind.tab-pane.container-fluid
      .page-header
        h1
          i.fa.fa-flag.fa-fw.fa-lg
          | Wind Power
      .charts
    #map.tab-pane
      .page-header
        h1
          i.fa.fa-map-marker.fa-fw.fa-lg
          | Map
    #users.tab-pane
      .page-header
        a.btn.btn-primary.pull-right(data-toggle='modal' data-target='#add-user-modal')
          i.fa.fa-plus.fa-fw
          | Add User
        h1
          i.fa.fa-users.fa-fw.fa-lg
          | Users
      include ./users.jade

  .footer

  include ./scripts.jade
  include ./templates.jade
  script(src='scripts/models/upload.js')
  script(src='scripts/models/user.js')
  script(src='scripts/models/solar.js')
  script(src='scripts/models/wind.js')
  script(src='scripts/collections/uploads.js')
  script(src='scripts/collections/users.js')
  script(src='scripts/collections/measurements.js')
  script(src='scripts/views/uploadView.js')
  script(src='scripts/views/uploadsView.js')
  script(src='scripts/views/userView.js')
  script(src='scripts/views/usersView.js')
  script(src='scripts/views/chartView.js')
  script(src='scripts/views/chartsView.js')
  script(src='scripts/views/appView.js')
  script(src='scripts/routers/router.js')
  script(src='scripts/app.js')
